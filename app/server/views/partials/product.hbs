<div class="grid-x grid-padding-x product">
	<div class="cell small-12 flex-container flex-dir-row">
		<div class="callout flex-child-auto ">
			<div class="wrap">
				<div class="image"
					style="background-image: url('{{img}}')">
					<img class="img" src="{{img}}">
				</div>
			</div>
		</div>
		<div class="callout flex-child-auto">
			<div class="grid-x align-justify">
				<div class="cell small-4">
        			<h1>{{name}}</h1>
				</div>
				<div class="cell small-4">
					<span>{{price}}</span>
					<span>{{currency}}</span>
				</div>
			</div>
			<div>
				<p>{{description}}</p>
			</div>
			<div>
				<a class="button" href="#products">back</a>
			</div>
		</div>
	</div>
</div>
